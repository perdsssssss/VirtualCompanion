<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image - FULL SCREEN -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/background_placeholder"
        android:scaleType="centerCrop"
        android:contentDescription="Background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Gradient Overlay -->
    <View
        android:id="@+id/gradientOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_overlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Settings Icon - Top Left -->
    <ImageView
        android:id="@+id/settingsIcon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_margin="16dp"
        android:background="@drawable/icon_bg"
        android:clickable="true"
        android:contentDescription="Settings"
        android:elevation="8dp"
        android:focusable="true"
        android:padding="10dp"
        android:src="@drawable/ic_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

    <!-- Coins Display - Top Right -->
    <LinearLayout
        android:id="@+id/coinsDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/coin_display_bg"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/coinAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:shadowColor="#CC000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="6"
            android:text="150"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="6dp"
            android:contentDescription="Coins"
            android:src="@drawable/ic_coin" />

    </LinearLayout>

    <!-- App Title - Responsive -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ECHO"
        android:textSize="60sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:letterSpacing="0.03"
        android:fontFamily="@font/nunito_extrabold"
        android:shadowColor="#DD000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="12"
        android:elevation="8dp"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="40sp"
        app:autoSizeMaxTextSize="60sp"
        app:autoSizeStepGranularity="2sp"
        app:layout_constraintTop_toBottomOf="@id/settingsIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pet Image - Responsive with proper constraints -->
    <ImageView
        android:id="@+id/mainPetImage"
        android:layout_width="422dp"
        android:layout_height="398dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:contentDescription="Your Pet"
        android:elevation="6dp"
        android:scaleType="fitCenter"
        app:layout_constraintDimensionRatio="H,1:0.9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        app:layout_constraintWidth_percent="0.9" />

    <!-- Mood Feedback Message (shown after completing quests) -->
    <TextView
        android:id="@+id/moodInfoMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:elevation="8dp"
        android:fontFamily="@font/nunito_bold"
        android:shadowColor="#CC000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="6"
        android:text="You completed all your tasks. How do you feel now?"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/mainPetImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Mood Prompt - Overlays bottom of pet -->
    <TextView
        android:id="@+id/moodPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:elevation="8dp"
        android:fontFamily="@font/nunito_bold"
        android:shadowColor="#CC000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="6"
        android:text="Mirror your mood!"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:autoSizeMaxTextSize="18sp"
        app:autoSizeMinTextSize="14sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainPetImage" />

    <!-- Likert Scale Emoji Container - Properly Centered -->
    <LinearLayout
        android:id="@+id/emojiContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/emoji_container_bg"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/moodPrompt">

        <!-- Very Sad - 1 -->
        <ImageView
            android:id="@+id/emoji1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/emoji_selector"
            android:clickable="true"
            android:contentDescription="Neutral"
            android:focusable="true"
            android:src="@drawable/emoji_neutral_b" />

        <!-- Sad - 2 -->
        <ImageView
            android:id="@+id/emoji2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/emoji_selector"
            android:clickable="true"
            android:contentDescription="Happy"
            android:focusable="true"
            android:src="@drawable/emoji_happy_b" />

        <!-- Neutral - 3 -->
        <ImageView
            android:id="@+id/emoji3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/emoji_selector"
            android:clickable="true"
            android:contentDescription="Sad"
            android:focusable="true"
            android:src="@drawable/emoji_sad_b" />

        <!-- Happy - 4 -->
        <ImageView
            android:id="@+id/emoji4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/emoji_selector"
            android:clickable="true"
            android:contentDescription="Angry"
            android:focusable="true"
            android:src="@drawable/emoji_angry_b" />

        <!-- Very Happy - 5 -->
        <ImageView
            android:id="@+id/emoji5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/emoji_selector"
            android:clickable="true"
            android:contentDescription="Anxious"
            android:focusable="true"
            android:src="@drawable/emoji_anxious_b" />

    </LinearLayout>

    <!-- Submit Button - Smaller and Responsive -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/glass_button_selector"
        android:fontFamily="@font/nunito_bold"
        android:foreground="@drawable/button_click_effect"
        android:minWidth="160dp"
        android:minHeight="50dp"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:shadowColor="#CC000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="10"
        android:stateListAnimator="@null"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:cornerRadius="30dp"
        app:elevation="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emojiContainer"
        app:layout_constraintVertical_bias="0.3"
        app:strokeColor="#EEFFFFFF"
        app:strokeWidth="2dp" />

    <!-- Bottom Navigation - Always at bottom -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:background="@drawable/nav_background"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:clickable="true"
            android:focusable="true"
            app:tint="#FFFFFF" />

        <ImageView
            android:id="@+id/navQuests"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_quests"
            android:contentDescription="Statistics"
            android:clickable="true"
            android:focusable="true"
            app:tint="#B3FFFFFF" />

        <ImageView
            android:id="@+id/navCustomize"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_customize"
            android:contentDescription="Profile"
            android:clickable="true"
            android:focusable="true"
            app:tint="#B3FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>