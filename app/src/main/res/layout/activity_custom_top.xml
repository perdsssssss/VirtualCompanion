<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Background Image - FULL SCREEN -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_main"
        android:scaleType="centerCrop"
        android:contentDescription="Background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Gradient Overlay -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_overlay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Settings Icon - Top Left -->
    <ImageView
        android:id="@+id/settingsIcon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_margin="16dp"
        android:background="@drawable/icon_bg"
        android:clickable="true"
        android:contentDescription="Settings"
        android:elevation="8dp"
        android:focusable="true"
        android:padding="10dp"
        android:src="@drawable/ic_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

    <!-- Coins Display - Top Right -->
    <LinearLayout
        android:id="@+id/coinsDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/coin_display_bg"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/coinAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:shadowColor="#CC000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="6"
            android:text="150"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="6dp"
            android:contentDescription="Coins"
            android:src="@drawable/ic_coin" />

    </LinearLayout>

    <!-- App Title - Responsive -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ECHO"
        android:textSize="60sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:letterSpacing="0.03"
        android:fontFamily="@font/nunito_extrabold"
        android:shadowColor="#DD000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="12"
        android:elevation="8dp"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="40sp"
        app:autoSizeMaxTextSize="60sp"
        app:autoSizeStepGranularity="2sp"
        app:layout_constraintTop_toBottomOf="@id/settingsIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Left Side - Category Buttons -->
    <LinearLayout
        android:id="@+id/categoryButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:elevation="10dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appTitle">

        <!-- Category Button 1 - Tops -->
        <LinearLayout
            android:id="@+id/categoryButton1"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/category_button_bg"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/categoryIcon1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:contentDescription="Tops"
                android:src="@drawable/ic_category_empty" />

        </LinearLayout>

        <!-- Category Button 2 - Bottoms -->
        <LinearLayout
            android:id="@+id/categoryButton2"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/category_button_bg"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/categoryIcon2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:contentDescription="Bottoms"
                android:src="@drawable/ic_category_empty" />

        </LinearLayout>

        <!-- Category Button 3 - Hats -->
        <LinearLayout
            android:id="@+id/categoryButton3"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/category_button_bg"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/categoryIcon3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:contentDescription="Hats"
                android:src="@drawable/ic_category_empty" />

        </LinearLayout>

        <!-- Category Button 4 - Glasses -->
        <LinearLayout
            android:id="@+id/categoryButton4"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/category_button_bg"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/categoryIcon4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:contentDescription="Glasses"
                android:src="@drawable/ic_category_empty" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/petDisplayContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="5dp"
        app:layout_constraintWidth_percent="1.01"
        app:layout_constraintDimensionRatio="H,413:467"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        app:layout_constraintBottom_toTopOf="@id/shopContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">


        <!-- BASE PET -->
        <ImageView
            android:id="@+id/petDisplay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/emotion_neutral" />


        <!-- BOTTOM CLOTHES (LOWER) -->
        <ImageView
            android:id="@+id/bottomLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:visibility="gone" />


        <!-- TOP CLOTHES (ABOVE BOTTOM) -->
        <ImageView
            android:id="@+id/topLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <!-- GLASSES (TOPMOST) -->
        <ImageView
            android:id="@+id/glassesLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <!-- HAT -->
        <ImageView
            android:id="@+id/hatLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:visibility="gone" />


    </FrameLayout>



    <!-- Shop Container - Bottom -->
    <LinearLayout
        android:id="@+id/shopContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/shop_container_bg"
        android:elevation="10dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Shop Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/categoryTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_bold"
                android:shadowColor="#CC000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:text="Body Accessories"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="14sp"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeStepGranularity="1sp" />

            <TextView
                android:id="@+id/equipButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/equip_button_bg"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/nunito_bold"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:shadowColor="#CC000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:text="Equip"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="16sp"
                app:autoSizeStepGranularity="1sp" />

        </LinearLayout>

        <!-- Items Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/itemsRecyclerViewTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:paddingVertical="4dp"
            android:overScrollMode="never" />
    </LinearLayout>

    <!-- Bottom Navigation - Always at bottom -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:background="@drawable/nav_background"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:clickable="true"
            android:focusable="true"
            app:tint="#B3FFFFFF" />

        <ImageView
            android:id="@+id/navQuests"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_quests"
            android:contentDescription="Quests"
            android:clickable="true"
            android:focusable="true"
            app:tint="#B3FFFFFF" />

        <ImageView
            android:id="@+id/navCustomize"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_customize"
            android:contentDescription="Customize"
            android:clickable="true"
            android:focusable="true"
            app:tint="#FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>