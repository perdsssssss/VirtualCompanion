<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image - FULL SCREEN -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/background_placeholder"
        android:scaleType="centerCrop"
        android:contentDescription="Background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Gradient Overlay -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_overlay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/icon_bg"
        android:clickable="true"
        android:contentDescription="Back"
        android:elevation="8dp"
        android:focusable="true"
        android:padding="10dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

    <!-- App Title -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ECHO"
        android:textSize="60sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:letterSpacing="0.03"
        android:fontFamily="@font/nunito_extrabold"
        android:shadowColor="#DD000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="12"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp" />

    <!-- Settings Container ScrollView -->
    <ScrollView
        android:id="@+id/settingsScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Settings Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:shadowColor="#DD000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:text="Settings"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Sound Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_card_bg"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="center"
                    android:text="Sound"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <!-- Sound Effects Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_sound"
                        android:contentDescription="Sound"
                        app:tint="#FFFFFF" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Sound effects"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/nunito_bold"
                        android:shadowColor="#80000000"
                        android:shadowDx="0"
                        android:shadowDy="2"
                        android:shadowRadius="4" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/soundEffectsToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="#FFFFFF"
                        app:trackTint="#F6DBD2" />

                </LinearLayout>

            </LinearLayout>

            <!-- Rename & Change Gender Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_card_bg"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="center"
                    android:text="Rename &amp; Change Gender"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <!-- Name Input with Edit Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="20dp">

                    <EditText
                        android:id="@+id/petNameInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="name your companion"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#CCFFFFFF"
                        android:background="@null"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/nunito_bold"
                        android:inputType="textPersonName"
                        android:maxLength="15"
                        android:shadowColor="#CC000000"
                        android:shadowDx="0"
                        android:shadowDy="3"
                        android:shadowRadius="8" />

                    <ImageView
                        android:id="@+id/editNameIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="10dp"
                        android:contentDescription="Edit name"
                        android:src="@drawable/ic_edit"
                        app:tint="#FFFFFF" />

                </LinearLayout>

                <!-- Gender Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Boy Button -->
                    <LinearLayout
                        android:id="@+id/boyButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/gender_selector_bg"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="Boy"
                            android:src="@drawable/ic_boy"
                            app:tint="#87CEEB" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/nunito_bold"
                            android:shadowColor="#CC000000"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="6"
                            android:text="Male"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Girl Button -->
                    <LinearLayout
                        android:id="@+id/girlButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/gender_selector_bg"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="Girl"
                            android:src="@drawable/ic_girl"
                            app:tint="#FFB6C1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/nunito_bold"
                            android:shadowColor="#CC000000"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="6"
                            android:text="Female"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveButton"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="Save"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:fontFamily="@font/nunito_bold"
                android:shadowColor="#CC000000"
                android:shadowDx="0"
                android:shadowDy="4"
                android:shadowRadius="10"
                android:stateListAnimator="@null"
                android:foreground="@drawable/button_click_effect"
                app:backgroundTint="@null"
                android:background="@drawable/glass_button_selector"
                app:cornerRadius="30dp"
                app:elevation="12dp"
                app:strokeColor="#EEFFFFFF"
                app:strokeWidth="2dp"
                android:layout_marginTop="1dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation - Always at bottom -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:background="@drawable/nav_background"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:clickable="true"
            android:focusable="true"
            app:tint="#B3FFFFFF" />

        <ImageView
            android:id="@+id/navQuests"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_quests"
            android:contentDescription="Tasks"
            android:clickable="true"
            android:focusable="true"
            app:tint="#B3FFFFFF" />

        <ImageView
            android:id="@+id/navCustomize"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_customize"
            android:contentDescription="Customize"
            android:clickable="true"
            android:focusable="true"
            app:tint="#FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>