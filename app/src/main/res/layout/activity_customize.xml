<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image - FULL SCREEN -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/background_placeholder"
        android:scaleType="centerCrop"
        android:contentDescription="Background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Gradient Overlay for better text readability -->
    <View
        android:id="@+id/gradientOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_overlay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title - Responsive text -->

    <!-- Name Input Container -->

    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="36dp"
        android:elevation="8dp"
        android:fontFamily="@font/nunito_extrabold"
        android:gravity="center"
        android:shadowColor="#DD000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="12"
        android:text="Mirror your Mood"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="32sp"
        app:autoSizeMinTextSize="24sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/nameContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/name_input_bg"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/petNameInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:maxWidth="220dp"
            android:hint="name your companion!"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#EEFFFFFF"
            android:background="@null"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_extrabold"
            android:inputType="textPersonName"
            android:maxLength="15"
            android:shadowColor="#CC000000"
            android:shadowDx="0"
            android:shadowDy="3"
            android:shadowRadius="8" />

        <ImageView
            android:id="@+id/editIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:contentDescription="Edit name"
            android:src="@drawable/ic_edit" />

    </LinearLayout>

    <!-- Pet Image - Overlapping design -->

    <!-- Gender Label with shadow - overlays bottom of pet -->

    <!-- Gender Selection Buttons - overlaps with pet image -->

    <ImageView
        android:id="@+id/customizablePet"
        android:layout_width="421dp"
        android:layout_height="539dp"
        android:adjustViewBounds="true"
        android:contentDescription="Your Pet"
        android:elevation="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/emotion_neutral"
        app:layout_constraintBottom_toBottomOf="@id/genderContainer"
        app:layout_constraintDimensionRatio="H,4:5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/nameContainer"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.95" />

    <TextView
        android:id="@+id/genderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        android:fontFamily="@font/nunito_bold"
        android:shadowColor="#DD000000"
        android:shadowDx="0"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:text="Choose Gender"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="16sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.717" />

    <!-- Done Button - Bottom positioned -->
    <LinearLayout
        android:id="@+id/genderContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:elevation="12dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/doneButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/genderLabel"
        app:layout_constraintVertical_bias="0.0">

        <!-- Boy Button -->
        <LinearLayout
            android:id="@+id/boyButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="@drawable/gender_selector_bg"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Boy"
                android:src="@drawable/ic_boy"
                app:tint="#87CEEB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunito_bold"
                android:shadowColor="#CC000000"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="8"
                android:text="Male"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Girl Button -->
        <LinearLayout
            android:id="@+id/girlButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/gender_selector_bg"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Girl"
                android:src="@drawable/ic_girl"
                app:tint="#FFB6C1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunito_bold"
                android:shadowColor="#CC000000"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="8"
                android:text="Female"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/doneButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/glass_button_selector"
        android:fontFamily="@font/nunito_bold"
        android:foreground="@drawable/button_click_effect"
        android:maxWidth="240dp"
        android:minHeight="48dp"
        android:shadowColor="#CC000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="10"
        android:stateListAnimator="@null"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:cornerRadius="32dp"
        app:elevation="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintWidth_max="240dp"
        app:strokeColor="#EEFFFFFF"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>