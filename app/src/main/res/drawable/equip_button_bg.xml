<?xml version="1.0" encoding="utf-8"?>
<!-- Improved Equip Button Background -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item
        android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#40000000"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- Main Button Background with Gradient -->
    <item
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#C8BE91"
                android:centerColor="#C8BE91"
                android:endColor="#C8BE91"
                android:type="linear"/>
            <corners android:radius="20dp"/>
            <stroke
                android:width="2dp"
                android:color="#FFFFFF"/>
        </shape>
    </item>

    <!-- Top Highlight for 3D Effect -->
    <item
        android:bottom="5dp"
        android:top="0dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#40FFFFFF"
                android:centerColor="#00FFFFFF"
                android:type="linear"/>
            <corners android:radius="18dp"/>
        </shape>
    </item>

</layer-list>


